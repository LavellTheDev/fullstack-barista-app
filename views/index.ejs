<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Cj's HotCoffee House App</title>

  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>CJ's HotCoffee House</h1>

<h3>Orders</h3>
  <ul class="messages">
  <% for(var i=0; i<messages.length; i++) {%>
    <li class="message">
      <span><%= messages[i].name %></span>
      <span><%= messages[i].order %></span>
      <span><%= messages[i].complete %></span>
      <span><i class="fa fa-check-circle" aria-hidden="true"></i></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>

  <h2 class="formSubmit">Submit Order</h2>

  <form action="/messages" method="POST">
    <input type="text" placeholder="Customer name..." name="name">
    <input type="text" placeholder="Customer order..." name="order">
    <button type="submit">Submit</button>
  </form>

  <script src="main.js"></script>

</body>
</html>
